@model Shop.Models.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<h1>
    Shop
    <a asp-controller="Cart" asp-action="Index" class="float-right">
        <img src="~/image/shoppingCart.png" alt="Image" style="max-width: 70px; max-height: 70px;" />
    </a>
</h1>
@if (Model.Articles.Keys.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Category)
                </th>
                <th>
                    Count
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Articles.Keys)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@Url.Content(item.ImageUrl)
                            " alt="Image" style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <img src="~/image/emptyPhoto.png" alt="Image" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-controller="Cart" asp-action="DecreaseCount" asp-route-articleId="@item.Id">-</a>
                        @Html.DisplayFor(modelItem => modelItem.Articles[item])
                        <a asp-controller="Cart" asp-action="IncreaseCount" asp-route-articleId="@item.Id">+</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h5 style="margin-right: 15%;" class="float-right">Total: @Model.CartValue</h5>
}
else
{
    <h2 style="padding-top: 80px;" class="text-center">Your shopping cart is empty.</h2>
}
