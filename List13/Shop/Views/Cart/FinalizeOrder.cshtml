@model Shop.Models.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<h1>
    Shop
    <a asp-controller="Cart" asp-action="Index" class="float-right">
        <img src="~/image/shoppingCart.png" alt="Image" style="max-width: 70px; max-height: 70px;" />
    </a>
</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Articles.Keys.FirstOrDefault().Category)
                </th>
                <th>
                    Count
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Articles.Keys)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="/@Url.Content(item.ImageUrl)
                                        " alt="Image" style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <img src="~/image/emptyPhoto.png" alt="Image" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Articles[item])
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="container mt-4 col-md-6">

    <form asp-controller="Cart" asp-action="ConfirmOrder" method="post">
        <div class="form-group">
            <label for="fullName">Full Name:</label>
            <input type="text" class="form-control" id="fullName" name="fullName" required>
        </div>

        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="address" required>
        </div>

        <div class="form-group">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" value="Credit Card">
                <label class="form-check-label" for="creditCard">
                    Credit Card
                </label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="PayPal">
                <label class="form-check-label" for="paypal">
                    PayPal
                </label>
            </div>
        </div>

        <div style="white-space: pre;" class="col-md-6 mx-auto text-center d-flex justify-content-center flex-column">
            <h5>Total: @string.Format("{0:C}", @Model.CartValue)</h5>
            <button type="submit" class="btn btn-primary">Confirm order</button>
        </div>
    </form>
</div>



