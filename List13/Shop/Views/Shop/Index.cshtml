@model Shop.Models.ShopViewModel

@{
    ViewData["Title"] = "Shop";
}

<h1>
    Shop
        <a asp-controller="Cart" asp-action="Index" class="float-right">
            <img src="~/image/shoppingCart.png" alt="Image" style="max-width: 70px; max-height: 70px;" />
        </a>
</h1>
<div class="mb-3">
    <form asp-controller="Shop" asp-action="ArticlesByCategory" method="get">
        <label>Select Category:</label>
        <select name="categoryId" asp-items="new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name))">
            <option value="0">All Categories</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
</div>
<table class="table" id="articlesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content(item.ImageUrl)
                                " alt="Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <img src="~/image/emptyPhoto.png" alt="Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="AddToCart" asp-route-articleId="@item.Id">Add</a>
                </td>
            </tr>
        }
        <tr>

        </tr>
    </tbody>
</table>
<div>
    <button onclick="loadMoreArticles()" id="loadMoreButton">Load More</button>
</div>

@section Scripts {
    <script>
        var currentPage = 1;
        var pageSize = 5

        var categories = [];

        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/api/article/hasmore",
                success: function (cos) {
                    if (!cos) {
                        $('#loadMoreButton').hide();
                    }
                },
                error: function () {
                    console.error('Wystąpił błąd podczas ładowania artykułów.');
                }
            });
        });

        $.ajax({
            type: "GET",
            url: "/api/categories",
            success: function (data) {
                categories = data;
            },
            error: function () {
                console.error('Wystąpił błąd podczas pobierania kategorii.');
            }
        });
        function loadMoreArticles() {
            $.ajax({
                type: "GET",
                url: "/api/article/getarticles",
                success: function (data) {
                        $.each(data, function (index, article) {
                            var category = categories.find(c => c.id == article.categoryId).name;
                            $('#articlesTable tbody').append(`
                                <tr>
                                    <td>
                                        ${article.name}
                                    </td>
                                    <td>
                                        ${article.price}
                                    </td>
                                    <td>
                                        ${article.imageUrl ?
                                            '<img src="' + article.imageUrl + '" alt="Image" style="max-width: 100px; max-height: 100px;" />' :
                                            '<img src="/image/emptyPhoto.png" alt="Image" style="max-width: 100px; max-height: 100px;" />'
                                        }
                                    </td>
                                    <td>${category}</td>
                                    <td>
                                        <a href="/Shop/AddToCart?articleId=${article.id}">Add</a>
                                    </td>
                                </tr>
                            `);
                        });
                    $.ajax({
                        type: "GET",
                        url: "/api/article/hasmore",
                            success: function(cos) {
                                if (!cos) {
                                    $('#loadMoreButton').hide();
                                }
                            },
                        error: function () {
                                console.error('Wystąpił błąd podczas ładowania artykułów.');
                        }
                    });
                },
                error: function () {
                    console.error('Wystąpił błąd podczas ładowania artykułów.');
                }
            });
            currentPage++;
        }
    </script>
}

